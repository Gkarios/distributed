network RandomGeometricGraph
{
    parameters:
        int totalNodes = default(5);
        int range = default(250);
        @display("bgb=1000,1000");
 		 
        submodules:
        node[totalNodes]: Node{
        xPos = intuniform(0,1000);
        yPos = intuniform(0,1000);
        }
    connections:
        for i = 0..totalNodes-1, for j = i+1..totalNodes-1
        {
            node[i].port++ <--> node[j].port++ if uniform(0,1)<connectedness;        
	}
}
