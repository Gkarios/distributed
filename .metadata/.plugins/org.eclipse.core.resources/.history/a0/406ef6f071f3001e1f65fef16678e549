network RandomGraph
{
    parameters:
        int totalNodes = default(5);
        double connectedness = default(0.5);
    submodules:
        node[totalNodes]: Node;
    connections:
        for i = 0..totalNodes-1, for j = i+1..totalNodes-1
        {
            node[i].port++ <--> node[j].port++ if uniform(0,1)<connectedness;        
}
}